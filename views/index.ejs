<% include ./partials/header.ejs %>



<body class=" antialiased gtx text-gray-900 font-sans">
    <div class="flex items-center justify-center min-h-screen w-full px-4 ">
      <div class=" w-full max-w-xs bg-white rounded-3xl shadow-lg p-8 m-4">
        <h3 class=" gta block w-full text-2xl text-center mb-2 text-black">Welcome To Pinterest</h3>  
        <% if(error.length > 0){ %>
        <p class=" text-red-700 error"><%= error %></p>
      <% } %>
    
          <form class="mb-4" action="/login" method="post">
            <div class="mb-2">
              <input class=" w-full border rounded p-2 outline-none focus:shadow-outline" type="text" name="username" placeholder="username">
            </div>
            <div class="mb-2">
              <input class=" mb-2 w-full border rounded p-2 outline-none focus:shadow-outline" type="password" name="password" placeholder="Password">
            </div>
           
            <button class=" mb-4 w-full bg-red-600 hover:bg-red-700 text-white text-sm font-semibold px-4 py-2 rounded-3xl">Login</button>
            <p class="text-xs font-semibold text-center">By continuing, you agree to Pinterest's Terms of Service; Opens a new tab and acknowledge you've read our Privacy Policy; Opens a new tab. Notice at collection</p>
            <a class="mt-4 inline-block text-sm font-semibold w-full text-zinc-700 text-center" href="/register">Dont have an account ?</a>
          </form>
      </div>
    </div>
</body>

  


